# ===========================================
# FIGMA-AGENTI - CONFIGURAÇÃO DE AMBIENTE
# ===========================================

# ===========================================
# CHAVES DE API
# ===========================================

# OpenAI API Key (obrigatório)
# Obtenha em: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenRouter API Key (opcional - para modelos alternativos)
# Obtenha em: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-your-openrouter-api-key-here

# ===========================================
# CONFIGURAÇÕES DE IA
# ===========================================

# Vector Store ID para RAG (opcional)
# Criado automaticamente se não especificado
VECTOR_STORE_ID=vs_your_vector_store_id_here

# Ativar RAG (Retrieval Augmented Generation)
USE_RAG=true

# ===========================================
# MODELOS DOS AGENTES ORQUESTRADOS
# ===========================================

# Agente A - JSON Analyst (analisa estrutura do figmaSpec)
MODELO_AGENTE_A=gpt-5-mini

# Agente B - Vision Reviewer (analisa imagem da tela)
MODELO_AGENTE_B=gpt-4o-mini

# Agente C - Reconciler (concilia e finaliza)
MODELO_AGENTE_C=o3-mini

# ===========================================
# CONFIGURAÇÕES DE TEMPERATURA
# ===========================================

# Temperatura para Vision API (0.0 - 1.0)
# Valores baixos = mais determinístico
# Valores altos = mais criativo
TEMP_VISION=0.1

# Temperatura para análise de texto (0.0 - 1.0)
TEMP_TEXTO=0.2

# ===========================================
# LIMITES DE TOKENS
# ===========================================

# Máximo de tokens para Vision API
MAX_TOKENS_VISION=4096

# Máximo de tokens para análise de texto
MAX_TOKENS_TEXTO=50000

# ===========================================
# CONFIGURAÇÕES DO SERVIDOR
# ===========================================

# Porta do servidor
PORT=3000

# Ambiente (development, production)
NODE_ENV=development

# ===========================================
# CONFIGURAÇÕES DE LIMPEZA
# ===========================================

# Limpar arquivos temporários automaticamente
# true = limpa automaticamente
# false = mantém arquivos para debug
CLEANUP_TEMP_FILES=true

# Quantos dias manter arquivos de debug (padrão: 7 dias)
DEBUG_FILES_RETENTION_DAYS=7

# ===========================================
# CONFIGURAÇÕES DE RETRY
# ===========================================

# Número de tentativas em caso de erro
RETRY_ATTEMPTS=3

# Delay base entre tentativas (ms)
RETRY_DELAY=1000

# ===========================================
# CONFIGURAÇÕES DE CORS
# ===========================================

# URLs permitidas para CORS
# Adicione o domínio do seu VPS quando fizer deploy
CORS_ORIGIN=http://localhost:3000,https://your-domain.com

# ===========================================
# CONFIGURAÇÕES DE LOG
# ===========================================

# Nível de log (debug, info, warn, error)
LOG_LEVEL=info

# Salvar logs em arquivo
LOG_TO_FILE=true

# ===========================================
# CONFIGURAÇÕES DO LANGFUSE (TRACING)
# ===========================================

# URL do seu servidor Langfuse (ex: http://localhost:3000 ou https://seu-dominio.com)
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key-here

# Secret key do Langfuse
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key-here

# URL base do Langfuse (se diferente da padrão)
LANGFUSE_BASE_URL=http://localhost:3000

# Ativar envio de traces para Langfuse
LANGFUSE_ENABLED=true

# Nome do projeto no Langfuse
LANGFUSE_PROJECT_NAME=figma-agenti

# ===========================================
# CONFIGURAÇÕES DE DEPLOY
# ===========================================

# URL base da API (para produção)
API_BASE_URL=https://your-domain.com

# Timeouts para diferentes tipos de requisições (ms)
REQUEST_TIMEOUT=30000
OPENAI_TIMEOUT=60000
GITHUB_TIMEOUT=15000
HEALTH_TIMEOUT=5000
VISION_TIMEOUT=120000

# ===========================================
# INSTRUÇÕES DE USO
# ===========================================

# 1. Copie este arquivo para .env
# 2. Substitua os valores de exemplo pelos reais
# 3. Mantenha as chaves de API seguras
# 4. Ajuste as configurações conforme necessário
# 5. Para produção, use .env.production

# ===========================================
# NOTAS IMPORTANTES
# ===========================================

# - Nunca commite o arquivo .env
# - Use .env.example como template
# - Mantenha as chaves de API seguras
# - Teste as configurações antes do deploy
# - Monitore o uso de tokens da OpenAI
