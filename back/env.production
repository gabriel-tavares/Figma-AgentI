# ===========================================
# FIGMA-AGENTI - CONFIGURAÇÃO DE PRODUÇÃO
# ===========================================

# ===========================================
# CHAVES DE API (PRODUÇÃO)
# ===========================================

# OpenAI API Key
OPENAI_API_KEY=your_production_openai_key

# OpenRouter API Key
OPENROUTER_API_KEY=your_production_openrouter_key

# ===========================================
# CONFIGURAÇÕES DE IA (PRODUÇÃO)
# ===========================================

# Usar Responses API (GPT-5, O3, etc.) em vez de Assistants
USE_RESPONSES=true

# Vector Store ID
VECTOR_STORE_ID=vs_6893c02afcb081918c69241839c8ca54

# Ativar RAG
USE_RAG=true

# ===========================================
# MODELOS DOS AGENTES ORQUESTRADOS
# ===========================================

# Agente A - JSON Analyst (analisa estrutura do figmaSpec)
MODELO_AGENTE_A=gpt-5-mini

# Agente B - Vision Reviewer (analisa imagem da tela) 
MODELO_AGENTE_B=gpt-4o-mini

# Agente C - Reconciler (concilia e finaliza)
MODELO_AGENTE_C=o3-mini

# ===========================================
# CONFIGURAÇÕES DE TEMPERATURA (PRODUÇÃO)
# ===========================================

# Temperatura para Vision API
TEMP_VISION=0.1

# Temperatura para análise de texto
TEMP_TEXTO=0.2

# ===========================================
# LIMITES DE TOKENS (PRODUÇÃO)
# ===========================================

# Máximo de tokens para Vision API
MAX_TOKENS_VISION=4096

# Máximo de tokens para análise de texto
MAX_TOKENS_TEXTO=50000

# ===========================================
# CONFIGURAÇÕES DO SERVIDOR (PRODUÇÃO)
# ===========================================

# Porta do servidor
PORT=3000

# Ambiente
NODE_ENV=production

# ===========================================
# CONFIGURAÇÕES DE LIMPEZA (PRODUÇÃO)
# ===========================================

# Limpar arquivos temporários automaticamente
CLEANUP_TEMP_FILES=true

# ===========================================
# CONFIGURAÇÕES DE RETRY (PRODUÇÃO)
# ===========================================

# Número de tentativas em caso de erro
RETRY_ATTEMPTS=3

# Delay base entre tentativas (ms)
RETRY_DELAY=1000

# ===========================================
# CONFIGURAÇÕES DE CORS (PRODUÇÃO)
# ===========================================

# URLs permitidas para CORS
CORS_ORIGIN=https://your-domain.com,https://www.figma.com

# ===========================================
# CONFIGURAÇÕES DE LOG (PRODUÇÃO)
# ===========================================

# Nível de log
LOG_LEVEL=info

# Salvar logs em arquivo
LOG_TO_FILE=true

# ===========================================
# CONFIGURAÇÕES DE DEPLOY (PRODUÇÃO)
# ===========================================

# URL base da API
API_BASE_URL=https://your-domain.com

# Timeout para requisições (ms)
REQUEST_TIMEOUT=30000

# ===========================================
# CONFIGURAÇÕES DE SEGURANÇA (PRODUÇÃO)
# ===========================================

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Headers de segurança
SECURITY_HEADERS=true

# ===========================================
# CONFIGURAÇÕES DE MONITORAMENTO (PRODUÇÃO)
# ===========================================

# Health check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Métricas
METRICS_ENABLED=true
METRICS_PORT=9090
